@model IEnumerable<InleveropdrGijs.Models.Camera>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gespotte camera's:</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AantalBevestigd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AantalBevestigd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CameraID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CameraID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CameraID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
