
@{
    ViewData["Title"] = "logIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input type="email" id="form2Example1" class="form-control" />
    <label class="form-label" for="form2Example1">Email addres</label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" id="form2Example2" class="form-control" />
    <label class="form-label" for="form2Example2">Wachtwoord</label>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31"> Blijf ingelogd </label>
      </div>
    </div>
  </div>

  <!-- Submit button -->
  <button type="button" class="btn btn-primary btn-block mb-4" >Log In</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Nog geen account? <a href="Create">Registreer jezelf</a></p>
  </div>
</form>
